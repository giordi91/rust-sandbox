{
    "type": "raster",
    "bindings": [
        [
            {
                "slot": 0,
                "visibility": [
                    "vertex","fragment","compute"
                ],
                "type": "uniform",
                "uniform_config": {
                    "dynamic": false
                }
            }
        ],
        [
            {
                "comment": "this is the depth texture we want to sample",
                "slot": 0,
                "visibility": [
                    "fragment","compute"
                ],
                "type": "texture",
                "texture_config": {
                    "multisampled": false,
                    "dimension": "2D",
                    "component_type": "uint"
                }
            },
            {
                "comment": "this is the depth texture sampler",
                "slot": 1,
                "visibility": [
                    "fragment","compute"
                ],
                "type": "sampler",
                "sampler_config": {
                    "comparison": false
                }
            },
            {
                "comment": "this is the output texture",
                "slot": 2,
                "visibility": [
                    "fragment","compute"
                ],
                "type": "storage_texture",
                "texture_config": {
                    "dimension": "2D",
                    "component_type": "float",
                    "format": "Rgba32Float",
                    "readonly": false
                }
            },
            {
                "comment": "this is the shader config buffer",
                "slot": 3,
                "visibility": [
                    "compute"
                ],
                "type": "uniform",
                "uniform_config": {
                    "dynamic": false
                }
            }
        ]
    ]
}